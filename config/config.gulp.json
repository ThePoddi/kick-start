{
  "paths": {
    "styles": {
      "source": "./source/styles/*.styl",
      "dest": "./public/assets/css/",
      "includePath": [
        "./node_modules/normalize-styl"
      ]
    },
    "scripts": {
      "source": "./source/scripts/*.js",
      "dest": "./public/assets/js/"
    },
    "images": {
      "source": "./source/images/**/*",
      "dest": "./public/assets/img/"
    },
    "fonts": {
      "source": "./source/fonts/**/*.{ttf,otf}",
      "dest": "./public/assets/fonts/"
    },
    "sourcemaps": {
      "dest": "./public/assets/maps/",
      "write": "../maps"
    },
    "watch": {
      "styles": "./source/styles/**/*.{css,styl}",
      "scripts": "./source/scripts/**/*.js",
      "images": "./source/images/**/*.*",
      "livereload": "./public/*.{js,html,php}"
    }
  },
  "run": {
    "development": {
      "uglify": false,
      "cleancss": false,
      "sourcemaps": true,
      "autoprefixer": true
    },
    "production": {
      "uglify": true,
      "cleancss": true,
      "sourcemaps": false,
      "autoprefixer": true
    }
  }
}
